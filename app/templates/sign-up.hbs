<html lang="en">

<head>
  <style>
    body {
      background-color: #2185D0;
      color: white;
    }
  </style>
</head>

<body>
  <div class="ui grid">
    <div class="one column row">
      <div class="column">
        {{#link-to 'index'}}<img src="images/studiBuddyLogo.png" style="width:100px" />{{/link-to}}
      </div>
    </div>
    <div class="two column row">
      <div class="six wide column"></div>
      <div class="ten wide column" style="text-align:left;">
        <div class="ui form">
          <div class="fields">
            <div class="field">
              <label>Username</label>
              <input type="text" placeholder="Username">
            </div>
          </div>
          <div class="fields">
            <div class="field">
              <label>Password</label>
              <input type="password" placeholder="Password">
            </div>
          </div>
          <div class="fields">
            <div class="field">
              <label>First Name</label>
              <input type="text" placeholder="First Name">
            </div>
          </div>
          <div class="fields">
            <div class="field">
              <label>Last Name</label>
              <input type="text" placeholder="Last Name">
            </div>
          </div>
          <div class="fields">
            <div class="field">
              <label>Email     </label>
              <input type="email" placeholder="your@email.com">
            </div>
          </div>
          {{#link-to 'sign-up-complete'}} <button class="ui blue floated button" style="height: 38px; width: 100px; border: #ffffff; border-style: solid; border-width: 1px;">Submit</button> {{/link-to}}
        </div>
      </div>
    </div>
  </div>
</body>

</html>
{{outlet}}
