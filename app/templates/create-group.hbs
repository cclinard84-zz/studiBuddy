<html lang="en">

<head>
  <style>
    body {
      background-color: #2185D0;
      color: white;
    }
    tbody{
      color:#2185D0;
    }
  </style>
</head>

<body>
  <div class="ui grid">
    <div class="one column row">
      <div class="column">
        {{#link-to 'index'}}<img src="images/studiBuddyLogo.png" style="width:100px" />{{/link-to}}
      </div>
    </div>
    <div class="two column row">
      <div class="five wide column"></div>
      <div class="six wide column" style="text-align:left;">
        <div class="ui equal width form">
          <div class="fields">
            <div class="field">
              <label>Group Name</label>
              <input type="text" placeholder="Group Name">
            </div>
          </div>
          <div class="fields">
            <div class="field">
              <label>Date</label>
              <input type="date">
            </div>
          </div>
          <div class="fields">
            <div class="field">
              <label>Location</label>
              <input type="text" placeholder="Location">
            </div>
          </div>
          <div class="fields">
            <div class="field">
              <label>Member Limit</label>
              <input type="number">
            </div>
          </div>
          <div class="fields">
            <div class="field">
              <label>Time </label>
              <input type="time">
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="two column row">
      <div class="six wide column"></div>
      <div class="eight wide column" style="text-align:left;">
        {{#link-to 'class-list'}}<button class="ui blue floated button" style="height: 38px; width: 160px; border: #ffffff; border-style: solid; border-width: 1px;">Back to Calendar</button>{{/link-to}}
        {{#link-to 'create-group-success'}}<button class="ui blue floated button" style="height: 38px; width: 160px; border: #ffffff; border-style: solid; border-width: 1px;">Create  group?</button>{{/link-to}}
      </div>
    </div>
  </div>
</body>

</html>

{{outlet}}
